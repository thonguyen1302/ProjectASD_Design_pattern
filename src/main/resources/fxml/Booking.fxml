<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" stylesheets="@../styles/Styles.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mum.asd.controller.BookingController">
   <top>
      <MenuBar BorderPane.alignment="TOP_LEFT">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Profile">
          	<items>
              <MenuItem mnemonicParsing="false" onAction="#showUserInfo" text="User info" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <VBox prefHeight="592.0" prefWidth="287.0" spacing="10.0" styleClass="background" stylesheets="@../styles/Styles.css" BorderPane.alignment="CENTER">
         <children>
            <Label text="Your Booking" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" top="10.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="20.0" prefWidth="265.0">
               <children>
                  <Label prefHeight="15.0" prefWidth="82.0" text="User Name " textFill="#f8f7f7">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
                  <Label fx:id="userId">
                     <HBox.margin>
                        <Insets left="25.0" />
                     </HBox.margin>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="25.0" />
               </VBox.margin>
            </HBox>
            <TextField fx:id="name" editable="false" prefHeight="20.0" prefWidth="246.0">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" />
               </VBox.margin></TextField>
            <HBox prefHeight="20.0" prefWidth="265.0">
               <children>
                  <Label text="Billing Adrress " textFill="#f8f7f7">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="25.0" />
               </VBox.margin>
            </HBox>
            <TextField fx:id="address" editable="false" prefHeight="20.0" prefWidth="246.0">
            	<VBox.margin>
                  <Insets left="25.0" right="25.0" />
               </VBox.margin></TextField>
            <HBox prefHeight="20.0" prefWidth="265.0">
               <children>
                  <Label text="Card Number " textFill="#f8f7f7">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="25.0" />
               </VBox.margin>
            </HBox>
            <ComboBox fx:id="cardNumber" prefHeight="20.0" prefWidth="246.0" promptText="Select Your Card">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" />
               </VBox.margin>
            </ComboBox>
            <Button fx:id="addNewCard" mnemonicParsing="false" onAction="#addNewCard" prefHeight="15.0" prefWidth="102.0" text="Add new card">
               <VBox.margin>
                  <Insets left="150.0" />
               </VBox.margin></Button>
            <HBox prefHeight="20.0" prefWidth="265.0">
               <children>
                  <Label text="Start Date " textFill="#f8f7f7">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="25.0" />
               </VBox.margin>
            </HBox>
            <TextField fx:id="startDate" editable="false" prefHeight="20.0" prefWidth="246.0">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" />
               </VBox.margin></TextField>
            <HBox prefHeight="20.0" prefWidth="265.0">
               <children>
                  <Label text="End Date " textFill="#f8f7f7">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="25.0" />
               </VBox.margin>
            </HBox>
            <TextField fx:id="endDate" editable="false" prefHeight="20.0" prefWidth="246.0">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" />
               </VBox.margin></TextField>
            <HBox prefHeight="20.0" prefWidth="265.0">
               <children>
                  <Label text="Discount " textFill="#f8f7f7">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="25.0" />
               </VBox.margin>
            </HBox>
            <TextField fx:id="discount" editable="false" prefHeight="20.0" prefWidth="246.0">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" />
               </VBox.margin></TextField>
               <HBox prefHeight="20.0" prefWidth="265.0">
               <VBox.margin>
                  <Insets left="25.0" />
               </VBox.margin>
               <children>
                  <Label text="Total " textFill="#f8f7f7">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <TextField fx:id="totalPrice" editable="false" prefHeight="20.0" prefWidth="246.0">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" />
               </VBox.margin></TextField>
            <HBox prefHeight="30.0" prefWidth="250.0" spacing="10.0">
               <children>
                  <Button fx:id="cancel" mnemonicParsing="false" onAction="#cancel" prefHeight="20.0" prefWidth="75.0" style="-fx-background-color: white;" text="CANCEL">
                     <effect>
                        <DropShadow blurType="ONE_PASS_BOX" color="#1965d0" />
                     </effect>
                  </Button>
                  <Button fx:id="pay" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#pay" prefHeight="20.0" prefWidth="75.0" styleClass="btnGreen" text="PAY" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <effect>
                        <DropShadow blurType="ONE_PASS_BOX" color="#6468b2" />
                     </effect>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets left="110.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="3.0" left="5.0" right="5.0" top="3.0" />
         </padding>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </left>
   <center>
      <VBox alignment="TOP_RIGHT" prefHeight="561.0" prefWidth="713.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="TOP_RIGHT" prefHeight="41.0" prefWidth="640.0">
               <children>
                  <Label fx:id="userMess" text="Hello">
                     <HBox.margin>
                        <Insets right="30.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#logout" prefHeight="22.0" prefWidth="70.0" styleClass="background" text="Logout" textFill="#fff9f9" textOverrun="CLIP">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="5.0" top="5.0" />
                     </HBox.margin>
                     <effect>
                        <DropShadow blurType="ONE_PASS_BOX" color="#00000091" />
                     </effect>
                  </Button>
               </children>
            </HBox>
            <TableView fx:id="roomsTable" prefHeight="300.0" prefWidth="679.0" tableMenuButtonVisible="true">
              <columns>
                <TableColumn fx:id="colRoomNumber" maxWidth="4000.0" prefWidth="75.0" text="Room No" />
                <TableColumn fx:id="colPrice" maxWidth="4000.0" prefWidth="75.0" text="Price" />
                  <TableColumn fx:id="colBedType" maxWidth="4000.0" prefWidth="75.0" text="Bed Type" />
                  <TableColumn fx:id="colAdults" maxWidth="4000.0" prefWidth="75.0" text="Adults" />
                  <TableColumn fx:id="colChildren" maxWidth="4000.0" prefWidth="60.0" text="Children" />
                  <TableColumn fx:id="colRoomType" maxWidth="4000.0" prefWidth="75.0" text="Room Type" />
                  <TableColumn fx:id="colStatus" maxWidth="4000.0" prefWidth="75.0" text="Status" />
                  <TableColumn fx:id="colTax" maxWidth="3500.0" prefWidth="75.0" text="Tax" />
              </columns>
               <VBox.margin>
                  <Insets left="10.0" right="5.0" />
               </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>
